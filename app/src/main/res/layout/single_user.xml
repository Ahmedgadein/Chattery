<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/single_user_pic"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:civ_border="true"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="1dp"
        android:src="@drawable/avatar_empty"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/single_user_pic"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/single_user_pic">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/single_user_username"
                android:fontFamily="@font/roboto_bold"
                android:text="User Name"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:id="@+id/single_user_online"
                android:layout_marginLeft="12dp"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/online_circle"
                android:visibility="invisible"/>

        </LinearLayout>

        <TextView
            android:id="@+id/single_user_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/single_user_username"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/single_user_pic"
            android:text="Hey there I'm using Whatsapp" />
    </LinearLayout>


</RelativeLayout>